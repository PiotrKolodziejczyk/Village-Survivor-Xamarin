<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App10.StartPage"
             NavigationPage.HasNavigationBar="false"
             BackgroundImage="menu.jpg">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" >
            <Label HorizontalTextAlignment="Center" Text="VILLAGE SURVIVOR" FontSize="Large"></Label>
            <Button Command="{Binding StartGame}" Text="PLAY" HorizontalOptions="Center"></Button>
            <Button  Text="RANKING" Command="{Binding Ranking}" HorizontalOptions="Center"></Button>
            <Button  Text="INSTRUCTION" Command="{Binding Instruction}" HorizontalOptions="Center"></Button>
            <Button  Text="EXIT GAME" Command="{Binding Exit}" HorizontalOptions="Center"></Button>
             
        </StackLayout>
    </ContentPage.Content>
</ContentPage>